<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ui.activities.MainActivity"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny_8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_small_24"
                android:paddingTop="@dimen/spacing_small_24"
                android:layout_marginBottom="@dimen/spacing_tiny_8"
                >

                <LinearLayout
                    style="@style/TopToolbarStyle">
                    <TextView
                        style="@style/TopToolbarTextViewStyle"
                        android:fontFamily="sans-serif-light"
                        android:text="5"/>
                    <TextView
                        style="@style/TopToolbarTextViewStyle"
                        android:fontFamily="sans-serif-light"
                        android:text="Рейтинг"/>
                </LinearLayout>

                <View
                    style="@style/VerticalLinesStyle"/>

                <LinearLayout
                    style="@style/TopToolbarStyle"
                    android:layout_weight="2">
                    <TextView
                        style="@style/TopToolbarTextViewStyle"
                        android:fontFamily="sans-serif-light"
                        android:text="5"/>
                    <TextView
                        style="@style/TopToolbarTextViewStyle"
                        android:fontFamily="sans-serif-light"
                        android:text="Написано строк кода"/>
                </LinearLayout>

                <View
                    style="@style/VerticalLinesStyle"/>

                <LinearLayout
                    style="@style/TopToolbarStyle">
                    <TextView
                        style="@style/TopToolbarTextViewStyle"
                        android:fontFamily="sans-serif-light"
                        android:text="5"/>
                    <TextView
                        style="@style/TopToolbarTextViewStyle"
                        android:fontFamily="sans-serif-light"
                        android:text="Проектов"/>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny_8"
            android:layout_marginBottom="@dimen/spacing_tiny_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/spacing_normal_32"
                android:layout_marginRight="@dimen/spacing_smaller_16">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Мобильный телефон"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:focusable="false"
                        android:enabled="false"
                        android:text="+7(929) 801-25-66"
                        android:fontFamily="sans-serif-light">
                    </EditText>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thick_1"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_large_72"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny_8"
            android:layout_marginBottom="@dimen/spacing_tiny_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_mail_black_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/spacing_normal_32"
                android:layout_marginRight="@dimen/spacing_smaller_16">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-mail"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:inputType="textEmailAddress"
                        android:enabled="false"
                        android:text="korzhov.m.s@yandex.ru"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light">
                    </EditText>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thick_1"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_large_72"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny_8"
            android:layout_marginBottom="@dimen/spacing_tiny_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_vkontakte" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/spacing_normal_32"
                android:layout_marginRight="@dimen/spacing_smaller_16"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/vk_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Профиль в vk"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:inputType="text"
                        android:enabled="false"
                        android:text="https://vk.com/korzhovms"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        >
                    </EditText>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thick_1"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_large_72"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny_8"
            android:layout_marginBottom="@dimen/spacing_tiny_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_mark_github" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_large_72"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/spacing_normal_32"
                android:layout_marginRight="@dimen/spacing_smaller_16">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/github_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Репозиторий"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:enabled="false"
                        android:text="https://github.com/maksim-korzhov"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        >
                    </EditText>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thick_1"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_large_72"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny_8"
            android:layout_marginBottom="@dimen/spacing_tiny_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/spacing_normal_32"
                android:layout_marginRight="@dimen/spacing_smaller_16">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/about_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="О себе"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:enabled="false"
                        android:text="Программист, пишу сайты. Хочу изучить мобильную разработку, должно быть интересно."
                        android:focusable="false"
                        android:fontFamily="sans-serif-light" >
                    </EditText>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thick_1"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/spacing_large_72"
            />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

