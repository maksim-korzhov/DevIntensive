<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <!-- ================================== -->
    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_32</item>
    </style>

    <style name="VerticalLinesStyle">
        <item name="android:layout_width">@dimen/line_thick_1</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="TopToolbarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TopToolbarTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="auth_layout_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">12dp</item>
        <item name="android:padding">@dimen/spacing_normal_32</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="auth_textinput_style">
        <item name="android:layout_marginTop">@dimen/spacing_smaller_16</item>
        <item name="android:textColorHint">@color/grey_light</item>
    </style>

    <style name="auth_textfield_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">30</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="auth_button">
        <item name="android:layout_marginTop">@dimen/spacing_smaller_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_32</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auth_clicktable_textview_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_smaller_16</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:text">@string/auth.title.forgot_pass</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <string name="auth.title.forgot_pass">Забыли пароль?</string>
</resources>
